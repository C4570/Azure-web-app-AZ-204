@page
@model AZ_204_SrC4.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Panel de Administración";
}

<!-- Contenedor principal en Grid (o como hayas definido tu layout) -->
<div class="admin-grid">
    <!-- Ventana Izquierda (ejemplo) -->
    <div class="left-window">
        <h3>Ventana Izquierda</h3>
        <p>Aquí tu contenido...</p>
    </div>

    <!-- Ventana Superior Derecha -->
    <div class="top-right-window">
        <h3>Ventana Superior Derecha</h3>
        <p>Archivos locales en /wwwroot/CVs:</p>

        @if (Model.CVFiles == null || !Model.CVFiles.Any())
        {
            <div class="alert alert-info">
                No hay archivos aún.
            </div>
        }
        else
        {
            <ul>
                @foreach (var fileName in Model.CVFiles)
                {
                    <li>
                        <!-- Link para ver/descargar el archivo -->
                        <a href="@($"/CVs/{fileName}")" target="_blank">@fileName</a>
                    </li>
                }
            </ul>
        }
    </div>

    <!-- Ventana Inferior Derecha -->
    <div class="bottom-right-window">
        <h3>Ventana Inferior Derecha</h3>
        <p>Aquí tu contenido adicional...</p>
    </div>
</div>

<!-- Ejemplo de estilos CSS en la misma página (o en AdminDashboard.cshtml.css) -->
<style>
    .admin-grid {
        display: grid;
        grid-template-columns: 300px auto;
        grid-template-rows: 200px auto;
        gap: 10px;
        height: 80vh;
        margin: 1rem;
    }

    .left-window {
        grid-row: 1 / 3;
        grid-column: 1;
        border: 1px solid #ccc;
        padding: 10px;
        background-color: #f2f2f2;
    }

    .top-right-window {
        grid-row: 1;
        grid-column: 2;
        border: 1px solid #ccc;
        padding: 10px;
        background-color: #ffffff;
    }

    .bottom-right-window {
        grid-row: 2;
        grid-column: 2;
        border: 1px solid #ccc;
        padding: 10px;
        background-color: #ffffff;
    }
</style>
