@page
@model AZ_204_SrC4.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Botón para Iniciar Sesión arriba a la derecha -->
<div style="position: absolute; top: 20px; right: 20px; z-index: 999;">
    <a asp-page="/Login" class="btn btn-secondary">Iniciar Sesión</a>
</div>

<div class="text-center">
    <h1 class="display-4">Mi aplicación - ChatBot - V1</h1>
</div>

<div class="container mt-4 text-center">
    <h2>Subir Archivo para Procesamiento</h2>
    <form method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <input type="file" asp-for="UploadedFile" class="form-control" required
                   accept=".pdf,.doc,.docx,.png,.jpg,.jpeg" />
        </div>
        <button type="submit" asp-page-handler="Upload" class="btn btn-primary">
            Cargar Currículum
        </button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Output))
    {
        <div class="mt-4">
            <h3>Resultado:</h3>
            <pre>@Model.Output</pre>
        </div>
    }
</div>
